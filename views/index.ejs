<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Sản phẩm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Danh sách Sản phẩm</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Mã sản phẩm</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Ngày sản xuất</th>
                    <th scope="col">Giá gốc</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Mã kho hàng</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.ProductCode %></td>
                        <td><%= product.ProductName %></td>
                        <td><%= product.ProductDate.toLocaleDateString() %></td>
                        <td><%= product.ProductOriginPrice.toLocaleString() %> VNĐ</td>
                        <td><%= product.Quantity %></td>
                        <td><%= product.ProductStoreCode %></td>
                        <td>
                            <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/products/new" class="btn btn-primary">Thêm sản phẩm mới</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
